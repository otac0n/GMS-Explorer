<Window x:Class="GMS_Explorer.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GMS_Explorer"
        mc:Ignorable="d"
        Title="ProgressWindow" Height="100.83" Width="300" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" WindowStartupLocation="CenterOwner" Loaded="OnLoaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ProgressBar x:Name="PBar" Grid.Row="0"/>
        <Button x:Name="CancelBtn" Content="Cancel" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="73" Height="25" Click="CancelBtn_Click"/>
    </Grid>
</Window>
